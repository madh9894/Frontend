<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <h1 class="text-center mb-4">Welcome to the Microservices-Based Translation and Summarization Platform</h1>

    <!-- Translation and Summarization Form -->
    <div class="container mt-5">
        <form id="api-form">
            <div class="mb-3">
                <label for="service" class="form-label">Select Service:</label>
                <select id="service" class="form-select">
                    <option value="en2ar">EN2AR (English to Arabic)</option>
                    <option value="ar2en">AR2EN (Arabic to English)</option>
                    <option value="text-summarizer">Text Summarization</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="input-text" class="form-label">Input Text:</label>
                <textarea id="input-text" class="form-control" rows="5"
                    placeholder="Enter your text here..."></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

        <div id="output" class="mt-4">
            <h4>Response:</h4>
            <pre class="bg-light p-3 rounded" id="response"></pre>
        </div>
    </div>

    <!-- Include the script.js file -->
    <script src="script.js"></script>
</body>

</html>